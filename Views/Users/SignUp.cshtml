@using Microsoft.AspNetCore.Mvc.Localization;
@model webAdmin.ViewModels.User
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "SignUp";
	Layout = "_BasicLayout";
}

<div class="container d-flex flex-column">
	<div class="row vh-100">
		<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
			<div class="d-table-cell align-middle">

				<div class="text-center mt-4">
					<h1 class="h2">@Localizer["Sign up"]</h1>
					<p class="lead">
						@Localizer["After signing up, ask the administrator to apply for permission."]
					</p>
				</div>

				<div class="card">
					<div class="card-body">
						<div class="m-sm-4">
							<form asp-action="SignUp">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="mb-3">
									<label asp-for="user_id" class="form-label"></label>
									<input asp-for="user_id" class="form-control form-control-lg" placeholder=@Localizer["Enter your id"] />
									<div class="text-muted">@Localizer["4 characters or more, english only"]</div>
									<span asp-validation-for="user_id" class="text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="user_pw" class="form-label"></label>
									<input asp-for="user_pw" class="form-control form-control-lg" type="password" placeholder=@Localizer["Enter your password"] />
									<div class="text-muted">@Localizer["8 characters or more, at least 1 english, 1 number, 1 special characters"]</div>
									<span asp-validation-for="user_pw" class="text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="user_pw_confirm" class="form-label"></label>
									<input asp-for="user_pw_confirm" class="form-control form-control-lg" type="password" placeholder=@Localizer["Enter your re-enter password"] />
									<span asp-validation-for="user_pw_confirm" class="text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="name" class="form-label"></label>
									<input asp-for="name" class="form-control form-control-lg" placeholder=@Localizer["Enter your name"] />
									<span asp-validation-for="name" class="text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="email" class="form-label"></label>
									<input asp-for="email" class="form-control form-control-lg" type="email" placeholder=@Localizer["Enter your email"] />
									<span asp-validation-for="email" class="text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="dept" class="form-label"></label>
									<input asp-for="dept" class="form-control form-control-lg" placeholder=@Localizer["Enter your department"] />
									<span asp-validation-for="dept" class="text-danger"></span>
								</div>
								<small>
									<a href="~/Users/SignIn">@Localizer["Sign in"]</a>
								</small>
								<div class="text-center mt-3">
									<input type="submit" value=@Localizer["Sign up"] class="btn btn-lg btn-primary" />
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
